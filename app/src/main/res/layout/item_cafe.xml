<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp">

    <!-- Background là hình ảnh quán -->
    <ImageView
        android:id="@+id/ivCafeImage"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray" />

    <!-- Nền mờ đè lên ảnh, chiếm 50% chiều cao -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp">

        <!-- Tên quán -->
        <TextView
            android:id="@+id/tvCafeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Tên quán"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Địa chỉ: Không có địa chỉ"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Đánh giá -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Đánh giá: 0.0/5"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Mô tả: Không có mô tả"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Hoạt động -->
        <TextView
            android:id="@+id/tvActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Hoạt động: Không có hoạt động"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>