<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_voucher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_accent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_voucher_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_voucher_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost/Quantity"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"
            android:textSize="14sp"
            app:backgroundTint="@color/coffee_accent"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:padding="8dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>